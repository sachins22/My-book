{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "allowJs": true // This allows JavaScript files to be included
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js", // Include JavaScript files
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
